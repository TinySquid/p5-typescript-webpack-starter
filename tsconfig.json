{
  // For all available tsconfig options checkout: https://www.typescriptlang.org/tsconfig
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    // Highly recommend turning these on
    // "noImplicitAny": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
